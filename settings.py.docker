                k.replace('RSS_FEED_', ''), 
                v.partition(';')[0], 
                v.partition(';')[2], 
                environ.get('MATTERMOST_USERNAME', k.replace('RSS_FEED_', '')),
                environ['MATTERMOST_CHANNEL'],
                environ.get('RSS_SHOW_NAME', True),
                environ.get('RSS_SHOW_TITLE', True),
